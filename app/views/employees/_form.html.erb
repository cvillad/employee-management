<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div class="alert alert-danger" role="alert" id="error_explanation">
      <h5 class="alert heading"><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h5>
      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">  
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.number_field :phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :salary %>
    <%= form.number_field :salary, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :area %>
    <%= form.select :area, options_for_select(EmployeeArea.options, EmployeeArea::AREAS.index(employee.area)), 
        {include_blank: "Area"}, required: true, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>