<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Employees</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">Phone</th>
        <th scope="col">Email</th>
        <th scope="col">Salary</th>
        <th scope="col">Area</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.first_name %></td>
          <td><%= employee.last_name %></td>
          <td><%= employee.phone %></td>
          <td><%= employee.email %></td>
          <td><%= number_to_currency(employee.salary, separator: ",", delimiter: ".") %></td>
          <td><%= employee.area.capitalize %></td>
          <td><%= link_to 'Show', employee %></td>
          <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
          <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= form_tag import_employees_path, multipart: true do %>
    <%= file_field_tag :file, class: "form-control-file" %>
    <%= submit_tag "Upload" %>
  <% end %>
  <%= link_to 'Download CSV list', employees_path(format: :csv) %>
  <br/>
  <%= link_to 'New Employee', new_employee_path, class: "btn btn-success mt-3" %>
</div>
